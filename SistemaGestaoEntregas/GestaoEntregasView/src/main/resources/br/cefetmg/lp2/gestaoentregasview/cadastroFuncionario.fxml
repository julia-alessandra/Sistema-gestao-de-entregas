<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.cefetmg.lp2.gestaoentregasview.CadastroFuncionarioController">
    <children>
        <!-- Imagem de Fundo -->
        <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../../../../images/fundo.png" /> <!-- Substitua pelo caminho correto da sua imagem -->
            </image>
        </ImageView>

        <!-- Botão "Voltar" -->
        <Button fx:id="buttonVoltar" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#voltar" prefHeight="15.0" prefWidth="32.0" style="-fx-background-color: 0;" stylesheets="@../../../../styles/botao.css">
            <graphic>
                <ImageView fitHeight="70.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../../images/iconeVoltarBranco.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Texto e outros componentes -->
        <Text layoutX="51.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cadastro de funcionário" fill="WHITE">
            <font>
                <Font name="Cambria Math" size="30.0" />
            </font>
        </Text>

        <Text layoutX="64.0" layoutY="83.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nome:" fill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <TextField fx:id="textNomeFuncionario" layoutX="150.0" layoutY="65.0" />

        <Text layoutX="57.0" layoutY="131.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Telefone:" fill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <TextField fx:id="textTelefoneFuncionario" layoutX="149.0" layoutY="114.0" />

        <Text layoutX="64.0" layoutY="177.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CPF:" fill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <TextField fx:id="textCpfFuncionario" layoutX="149.0" layoutY="159.0" />

        <Text layoutX="64.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Senha:" fill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <TextField fx:id="textSenhaFuncionario" layoutX="149.0" layoutY="193.0" />

        <Text layoutX="64.0" layoutY="252.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Empresas:" fill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <ComboBox fx:id="ComboBoxEmpresas" layoutX="149.0" layoutY="235.0" prefWidth="150.0" />

        <Text layoutX="64.0" layoutY="298.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cargo:" fill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <ComboBox fx:id="ComboBoxCargos" layoutX="150.0" layoutY="288.0" prefWidth="150.0" />

        <Button fx:id="ButtonCadastrarFuncionario" layoutX="313.0" layoutY="337.0" mnemonicParsing="false" onAction="#cadastrarFuncionario" text="Cadastrar" stylesheets="@../../../../styles/botao.css">
            <font>
                <Font size="20.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
